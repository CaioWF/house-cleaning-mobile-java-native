<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/worker_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cleaning_service_requester"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#555"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/cleaning_service_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#555"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cleaning_service_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="#555"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/cleaning_service_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="#555"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/accept_solicitation_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceitar"
                    android:theme="@style/PrimaryFlatButton" />

                <Button
                    android:id="@+id/refuse_solicitation_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recusar"
                    android:theme="@style/PrimaryFlatButton" />

                <Button
                    android:id="@+id/finalize_solicitation_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finalizar"
                    android:theme="@style/PrimaryFlatButton" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>